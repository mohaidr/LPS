{
  "LPSAppSettings": {
    "FileLogger": {
      "LogFilePath": "logs/lpslog.log",
      "ConsoleLogingLevel": 1,
      "EnableConsoleLogging": true,
      "DisableConsoleErrorLogging": true,
      "DisableFileLogging": false,
      "LoggingLevel": 0
    },
    "Watchdog": {
      "MaxMemoryMB": 5000,
      "CoolDownMemoryMB": 4000,
      "MaxCPUPercentage": 80,
      "CoolDownCPUPercentage": 60,
      "CoolDownRetryTimeInSeconds": 1,
      "MaxConcurrentConnectionsCountPerHostName": 3000,
      "CoolDownConcurrentConnectionsCountPerHostName": 1500,
      "MaxCoolingPeriod": 30,
      "ResumeCoolingAfter": 90,
      "SuspensionMode": 0
    },
    "HttpClient": {
      "ClientTimeoutInSeconds": 60,
      "PooledConnectionLifeTimeInSeconds": 1500,
      "PooledConnectionIdleTimeoutInSeconds": 350,
      "MaxConnectionsPerServer": 3000,
      "HeaderValidationMode": "RawPassthrough",
      "AllowHostOverride": false  
    },
    "Dashboard": {
      "BuiltInDashboard": true,
      "Port": 8009,
      "RefreshRate": 3,
      "WindowIntervalSeconds": 5
    },
    "GrafanaCloud": {
      "Enabled": false,
      "Endpoint": "https://prometheus-prod-53-prod-me-central-1.grafana.net/api/prom/push",
      "Username": "***",
      "ApiKey": "***",
      "PushIntervalSeconds": 15,
      "JobName": "lps"
    }
  }
}